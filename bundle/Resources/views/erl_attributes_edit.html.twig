{% trans_default_domain 'enhancedrelationlist_attribute' %}

{% block boolean_relation_attribute_edit %}
    <label>
        <input class="ez-data-source__input{% if hasErrors %} is-invalid{% endif %}"
               type="checkbox"
               {% if value %}checked="checked"{% endif %}
               value="1"
                {% if definition.required %} required="required"{% endif %}>
    </label>
{% endblock %}

{% block integer_relation_attribute_edit %}
    <label>
        <input class="ez-data-source__input form-control{% if hasErrors %} is-invalid{% endif %}"
               type="number"
               value="{{ value }}"
               {% if definition.required %} required="required"{% endif %}>
    </label>
{% endblock %}

{% block string_relation_attribute_edit %}
    <label>
        <input class="ez-data-source__input form-control{% if hasErrors %} is-invalid{% endif %}"
               type="text"
               value="{{ value }}"
               {% if definition.required %} required="required"{% endif %}>
    </label>
{% endblock %}

{% block selection_relation_attribute_edit %}
    <label>
        <select class="ez-data-source__input form-control{% if hasErrors %} is-invalid{% endif %}"
                {% if definition.settings.multiple %} multiple="multiple"{% endif %}
                {% if definition.required %} required="required"{% endif %}>
            {% if not definition.required and not definition.settings.multiple %}
                <option>{{ 'field.edit.selection.none'|trans }}</option>
            {% endif %}
            {% for index,option in definition.settings.options %}
                <option value="{{ index }}"{% if index in value %} selected="selected"{% endif %}>{{ option[field.languageCode]|default(option|first) }}</option>
            {% endfor %}
        </select>
    </label>
{% endblock %}
